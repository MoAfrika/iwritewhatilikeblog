import React from "react";
import { Input } from "@/components/ui/input";
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from "@/components/ui/select";
import { Search, Calendar } from "lucide-react";

export default function ArticleFilters({ searchTerm, onSearchChange, selectedDate, onDateChange, availableDates }) {
  return (
    <div className="bg-[#1a1a1a] rounded-2xl p-6 border border-gray-800/50">
      <div className="flex flex-col sm:flex-row gap-4">
        {/* Search Input */}
        <div className="relative flex-grow">
          <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-500" />
          <Input
            type="text"
            placeholder="Search articles..."
            value={searchTerm}
            onChange={(e) => onSearchChange(e.target.value)}
            className="pl-10 bg-[#0a0a0a] border-gray-800 text-white placeholder:text-gray-500 focus:border-blue-500 h-12"
          />
        </div>

        {/* Date Filter */}
        <div className="w-full sm:w-48">
          <Select value={selectedDate} onValueChange={onDateChange}>
            <SelectTrigger className="bg-[#0a0a0a] border-gray-800 text-white h-12">
              <div className="flex items-center gap-2">
                <Calendar className="w-4 h-4 text-gray-500" />
                <SelectValue placeholder="All Dates" />
              </div>
            </SelectTrigger>
            <SelectContent className="bg-[#1a1a1a] border-gray-800">
              <SelectItem value="all" className="text-white hover:bg-gray-800">
                All Dates
              </SelectItem>
              {availableDates.map((date) => (
                <SelectItem
                  key={date}
                  value={date}
                  className="text-white hover:bg-gray-800"
                >
                  {date}
                </SelectItem>
              ))}
            </SelectContent>
          </Select>
        </div>
      </div>
    </div>
  );
}
